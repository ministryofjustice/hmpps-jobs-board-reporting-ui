{
  "name": "hmpps-jobs-board-reporting-ui",
  "version": "0.0.1",
  "description": "Hmpps Jobs Board Reporting Ui",
  "repository": "git@github.com:ministryofjustice/hmpps-jobs-board-reporting-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "export $(cat feature.env) && concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open --e2e --browser chrome",
    "clean": "rm -rf dist node_modules",
    "rebuild": "npm run clean && npm i && npm run build"
  },
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.670.0",
    "@ministryofjustice/frontend": "^5.1.2",
    "@ministryofjustice/hmpps-connect-dps-components": "^2.1.0",
    "agentkeepalive": "^4.5.0",
    "applicationinsights": "^3.7.0",
    "body-parser": "^1.20.3",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "class-transformer": "^0.5.1",
    "compression": "^1.7.5",
    "connect-flash": "^0.1.1",
    "connect-redis": "^7.1.1",
    "crypto-js": "^4.2.0",
    "csurf": "^1.11.0",
    "date-fns": "^4.1.0",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "formidable": "^3.5.4",
    "govuk-frontend": "^5.8.0",
    "helmet": "^7.2.0",
    "http-errors": "^2.0.0",
    "joi": "^17.13.3",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^4.7.0",
    "superagent": "^10.2.0",
    "undici": "^7.11.0",
    "url-value-parser": "^2.2.0",
    "uuid": "^10.0.0",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^4.0.1",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.7.5",
    "@types/connect-flash": "0.0.40",
    "@types/csurf": "^1.11.5",
    "@types/date-fns": "^2.6.0",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.18.0",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.11",
    "@types/node": "^22.7.6",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.16",
    "@types/passport-oauth2": "^1.4.17",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.12.2",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "audit-ci": "^7.1.0",
    "aws-sdk-client-mock": "^4.1.0",
    "brace-expansion": "^1.1.12",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "cypress": "^13.15.0",
    "cypress-multi-reporters": "^1.6.4",
    "dotenv": "^16.5.0",
    "esbuild": "^0.25.3",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-cypress": "^3.6.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-prettier": "^5.2.1",
    "glob": "^11.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.2.10",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^13.5.6",
    "patch-package": "^8.0.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-jinja-template": "^1.5.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "cypress": {
      "@cypress/request": "^3.0.0"
    },
    "csurf": {
      "cookie": "0.7.2"
    }
  }
}
